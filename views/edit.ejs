<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs') %>

    <h1 class="edit-h1">Edit</h1>
    <nav class="show-exit">
        <a href="/storage" class="button"><button class="back-button">Back</button></a>
    </nav>
    <div class="show-container">
        <h1 class=""><%= collections.name %></h1>
        <div class="container-text">
            <form action="/storage/<%=collections._id %>?_method=PUT" method="POST">

                Item Name: <br><input class="mb-4 mt-2" type="text" placeholder="<%= collections.name %>" name="name"><br>
                Quantity: <br><input class="mb-4 mt-2" type="number" placeholder="<%= collections.quantity %>" name="quantity"><br>
                Color: <br><input class="mb-4 mt-2" type="text" placeholder="<%= collections.color %>" name="description"><br>
                Description: <br><input class="mb-4 mt-2" type="textbox" placeholder="<%= collections.description %>" name="description"><br>
                <div class="edit-submit-div">
                    <input class="mb-4 mt-2 edit-submit-button" type="submit" value="submit changes">
                </div>    
            </form>
        </div>
    </div>
    
